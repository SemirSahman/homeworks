package ba.bitcamp.homework28.tasks.task1;

import java.util.Calendar;
/**
 * Class representing complaint.
 * @author Semir
 *
 */
public class Complaint {

	private Integer id;
	private Calendar time;
	private String message;
	
	/**
	 * @param message 
	 * @param time
	 */
	public Complaint(String message, Calendar time) {
		super();
		this.message = message;
		this.time = time;
	}

	/**
	 * @param id
	 * @param message
	 * @param time
	 */
	public Complaint(Integer id, String message, Calendar time) {
		super();
		this.id = id;
		this.message = message;
		this.time = time;
	}



	/**
	 * @return the id
	 */
	public Integer getId() {
		return id;
	}

	/**
	 * @return the message
	 */
	public String getMessage() {
		return message;
	}
	
	/**
	 * @return the time of the complaint
	 */
	public String getTime() {
		return time.get(Calendar.HOUR_OF_DAY) + "-" + time.get(Calendar.MINUTE);
	}

	/**
	 * @return the date of the complaint
	 */
	public String getDate() {
		return time.get(Calendar.YEAR) + "-" + time.get(Calendar.MONTH) + "-" + time.get(Calendar.DAY_OF_MONTH);
	}
	
}